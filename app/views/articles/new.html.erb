<h1>New Article</h1>

<p>
	This is the view called by the new action in the Articles controller and we will add new articles using the form in this view
</p>



<%= form_for(@article) do |f| %>

	<%= render 'shared/error_messages', object: f.object %>	
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to '<< Back', controller: 'articles' %>